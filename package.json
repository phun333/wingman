{
  "name": "@ffh/root",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@typescript/native-preview": "^7.0.0-dev.20260209.1",
    "csv-parse": "^6.1.0",
    "playwright": "^1.58.2",
    "puppeteer": "^24.37.3",
    "sharp": "^0.34.5"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:web": "bun run --filter @ffh/web dev",
    "dev:api": "bun run --filter @ffh/api dev",
    "dev:docs": "bun run --filter @ffh/docs dev",
    "dev:convex": "bunx convex dev",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "typecheck": "tsgo -p apps/api --noEmit && tsgo -p apps/web --noEmit && tsgo -p convex --noEmit && tsgo -p packages/db --noEmit && tsgo -p packages/env --noEmit && tsgo -p packages/types --noEmit",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "seed:leetcode": "bun run scripts/seed-leetcode.ts",
    "seed:jobs": "bun run scripts/seed-jobs.ts",
    "seed:user": "bun run scripts/seed-user.ts",
    "seed": "bun run seed:leetcode && bun run seed:jobs && bun run seed:user"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@convex-dev/better-auth": "0.10.10",
    "@types/diff": "^8.0.0",
    "better-auth": "1.4.9",
    "convex": "^1.31.7",
    "diff": "^8.0.3"
  }
}
